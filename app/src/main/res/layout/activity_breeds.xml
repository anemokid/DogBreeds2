<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c4q.nyc.dogbreeds.BreedsActivity"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_welcome"
        android:textSize="20sp"
        android:text="welcome user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@id/cv_terrier"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/iv_terrier"
            android:layout_width="100dp"
            android:layout_height="80dp" />

            <TextView
                android:id="@id/tv_terrier"
                android:text="terrier"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@id/cv_spaniel"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/iv_spaniel"
            android:layout_width="100dp"
            android:layout_height="80dp"/>

            <TextView
                android:id="@id/tv_spaniel"
                android:text="spaniel"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@id/cv_retriever"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/iv_retriever"
            android:layout_width="100dp"
            android:layout_height="80dp"  />
            <TextView
                android:id="@id/tv_retriever"
                android:text="retriever"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
    android:layout_gravity="center_horizontal"
        android:id="@id/cv_poodle"

    android:layout_width="360dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"

    app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        <ImageView
            android:id="@id/iv_poodle"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="80dp"  />
            <TextView
                android:id="@id/tv_poodle"
                android:text="poodle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
